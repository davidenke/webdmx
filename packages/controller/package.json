{
  "name": "@webdmx/controller",
  "version": "0.0.1",
  "description": "",
  "author": {
    "name": "David Enke",
    "email": "david@enke.dev"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "run-s build",
    "convert": "xfix --source '/Applications/Lightkey.app/Contents/Resources/Fixture Profiles' --target ./fixtures",
    "check": "tsc --noEmit",
    "lint": "run-s -ln lint:*",
    "lint:eslint": "eslint -c eslint.config.ts",
    "lint:prettier": "prettier --check .",
    "build:presets:schema": "typescript-json-schema ./node_modules/@webdmx/common/dist/types/preset.types.d.ts Preset --ignoreErrors --out ./presets/preset.schema.json",
    "build:presets:index": "tsx ./scripts/build-preset-index.ts --source ./presets --target ./presets/presets.json",
    "build:presets": "run-s -lns build:presets:*",
    "build:compile": "vite build",
    "build": "run-s -lns build:*",
    "dev": "vite build --watch"
  },
  "dependencies": {
    "@webdmx/common": "workspace:*"
  },
  "devDependencies": {
    "@enke.dev/lint": "0.11.3",
    "@types/node": "24.10.1",
    "@types/w3c-web-serial": "1.0.8",
    "@webdmx/converter": "workspace:*",
    "eslint": "9.39.1",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "shx": "0.4.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.47.0",
    "typescript-json-schema": "0.66.0",
    "vite": "7.2.4",
    "vite-plugin-dts": "4.5.4"
  }
}
