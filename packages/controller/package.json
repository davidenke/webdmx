{
  "name": "@webdmx/controller",
  "version": "0.0.1",
  "description": "",
  "author": {
    "name": "David Enke",
    "email": "david@enke.dev"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "convert": "xfix --source '/Applications/Lightkey.app/Contents/Resources/Fixture Profiles' --target ./fixtures",
    "lint": "npx eslint . -c .eslintrc --ext .ts",
    "build:index:barrel": "barrelsby --config .barrelsby.json",
    "build:index:fixup": "shx sed -i \"s/';/\\.js';/g\" src/index.ts",
    "build:index": "run-s -lns build:index:*",
    "build:presets:schema": "typescript-json-schema ./src/types/preset.types.ts Preset --ignoreErrors --out ./presets/preset.schema.json",
    "build:presets:index": "ts-node ./scripts/build-preset-index.ts --source ./presets --target ./presets/presets.json",
    "build:presets": "run-s -lns build:presets:*",
    "build:compile": "vite build",
    "build": "run-s -lns build:*",
    "dev": "vite build --watch"
  },
  "devDependencies": {
    "@types/node": "18.16.15",
    "@types/w3c-web-serial": "1.0.3",
    "@webdmx/converter": "workspace:*",
    "barrelsby": "2.8.0",
    "eslint": "8.48.0",
    "eslint-plugin-import": "2.28.1",
    "npm-run-all": "4.1.5",
    "shx": "0.3.4",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "typescript-json-schema": "0.60.0",
    "vite": "4.4.9",
    "vite-plugin-dts": "3.5.3"
  }
}
